<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:paddingBottom="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/building1"
                android:layout_height="180dp"
                android:layout_width="match_parent"

                android:layout_marginStart="1dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/rent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:paddingTop="1dp"
                android:text=""
                android:textColor="#730B0B"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="1dp"
                android:text=""
                android:textColor="#0C0101"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"

                android:layout_marginTop="1dp"
                android:text=""
                android:textColor="#120505"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"

                android:background="@drawable/linearlayoutbg"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/owner1"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#120505"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="55dp"
                    android:orientation="vertical"
                    android:layout_marginStart="-10dp">


                    <TextView
                        android:id="@+id/Reachat"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"

                        android:layout_marginTop="5dp"
                        android:text="Reach At:"
                        android:textColor="#A60E0E"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="1dp"

                        android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/edit"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="1dp"

                            android:layout_marginTop="1dp"
                            android:foreground="@mipmap/edit"
                            android:src="?attr/selectableItemBackground"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            tools:src="@color/common_google_signin_btn_tint" />
<ImageButton
    android:id="@+id/phone"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_marginStart="9dp"

    android:layout_marginTop="1dp"
    android:foreground="@mipmap/phone"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"/>

                        <ImageButton
                            android:id="@+id/whatsapp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="7dp"

                            android:layout_marginTop="1dp"
                            android:foreground="@mipmap/whatsapp"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>